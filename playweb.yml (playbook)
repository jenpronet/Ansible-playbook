- name: Configuracion del servidor web
  hosts: grupoweb
  become: yes
  tasks:
    - name: Instalar Apache httpd
      yum: 
	     name: httpd
       state: present
    - name: Conectar HTTPD
      service:
	      name: httpd
        state: started
        enable: yes
     - name: lanzar el archivo web
       copy:
	 src: page.html
	 dest: /var/www/html/index.html

- name: configuracion de la base de datos
  hosts: grupodb
  become: yes
  tasks:
    - name: Instalar MySQL server
      yum: 
        name: mariadb-server
        state: present
     - name: conectar mariadb service
       service:
         name: mariadb
         state: started
         enabled: yes
